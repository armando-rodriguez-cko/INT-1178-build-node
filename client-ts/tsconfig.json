{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "removeComments": true,
    "sourceMap": false,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}